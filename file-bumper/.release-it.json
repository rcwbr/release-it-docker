{
  "git": {
    "commit": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION",
        "type": "text/plain"
      },
      "out": [
        {
          "file": "VERSION",
          "type": "text/plain"
        },
        {
          "file": "README.md",
          "type": "text/plain"
        }
      ]
    }
  }
}
